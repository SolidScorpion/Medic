<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
    <style name="AppTheme" parent="BaseTheme"/>
    <style name="ToolbarStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="textColor">@color/main_color</item>
    </style>
    <style name="CollapsingToolbarStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/main_color</item>
    </style>
    <style name="CollapsedStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.Progress">
        <item name="colorAccent">@color/main_color</item>
    </style>

</resources>
